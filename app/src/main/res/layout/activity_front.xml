<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/sao_pink_purple"
            android:gravity="center"
            android:padding="6dp"
            android:text="前比"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/devStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@color/green_cyan"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/amber"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/devStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/keRegTempNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/yiRegTempNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/devFW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/devSN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/devWorkModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tipTv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/user_name_et_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="状态提示信息"
        android:textColor="@color/red"
        android:textColorHint="@color/teal"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/closeDevBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:padding="3dp"
            android:text="关闭指静脉设备"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/openDevBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:padding="3dp"
            android:text="打开指静脉设备"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loseVoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/gray_white_btn_shape"
                android:text="音量-"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/voiceValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="0.2"
                android:background="@drawable/user_name_et_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:padding="3dp"
                android:text="4"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue_grey"
                android:textSize="13sp" />

            <Button
                android:id="@+id/addVoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@drawable/gray_white_btn_shape"
                android:text="音量+"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />

        </LinearLayout>

        <Button
            android:id="@+id/clearAllDevBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:padding="3dp"
            android:text="清除设备中所有模板"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/clearAllHostBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:padding="3dp"
            android:text="清除主机中所有模板"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/UserNameEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/user_name_et_shape"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:hint="请填用户名"
                android:inputType="text"
                android:lines="1"
                android:padding="3dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue_grey"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/clearEt"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/del_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/gray_white_btn_shape"
            android:text="用户注册"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <!--暂时没有做3/6模板的切换-->
        <RadioGroup
            android:id="@+id/RG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="3模板"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="6模板"
                android:textSize="12sp" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/openContinueVerifyCb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_weight="0.5"
            android:checked="false"
            android:text="连续验证"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="visible" />

            <Button
                android:id="@+id/getSDKVersion"
                android:layout_width="0dp"
                android:background="@drawable/gray_white_btn_shape"
                android:layout_weight="0.7"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="获取SDK版本" />

        <Button
            android:id="@+id/cancelVerifyBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/gray_white_btn_shape"
            android:text="取消验证/注册"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getDevInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="获取设备信息"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/setDevInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="设置设备信息"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/VerifyBtn1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="1:1验证"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verifyEt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/user_name_et_shape"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:hint="请填用户名"
            android:inputType="text"
            android:lines="1"
            android:padding="3dp"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue_grey"
            android:textSize="13sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/upTemplPacBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="上传模板包到主机"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/downTemplPacBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="下载模板包到设备"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/verifyBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_white_btn_shape"
            android:text="1:N验证"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineBottomIv"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fileListTip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="设备模板列表"
                android:textColor="@color/amber"
                android:textSize="13sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/datFileRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/lineIv"
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/consoleListTip"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="日志信息列表"
                    android:textColor="@color/amber"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/consoleClearIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/main_btn_ripple"
                    android:padding="3dp"
                    android:src="@drawable/delete_drawable"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/consoleRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/lineIv2"
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hostFileListTip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="主机模板列表"
                android:textColor="@color/amber"
                android:textSize="13sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hostDatFileRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
